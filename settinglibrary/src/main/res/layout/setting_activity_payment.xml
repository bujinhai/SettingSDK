<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_main_bg_color"
    android:orientation="vertical">

    <include layout="@layout/setting_layout_title_bar" />

    <RelativeLayout
        android:id="@+id/rl_setting_payment_psw"
        style="@style/setting_rl_view"
        android:background="@color/setting_white"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/setting_text_view"
            android:text="设置支付密码" />

        <ImageView style="@style/setting_image_view" />

    </RelativeLayout>

    <View style="@style/view_line" />

    <RelativeLayout
        android:id="@+id/rl_modify_payment_psw"
        android:background="@color/setting_white"
        style="@style/setting_rl_view">

        <TextView
            style="@style/setting_text_view"
            android:text="修改支付密码" />

        <ImageView style="@style/setting_image_view" />

    </RelativeLayout>

    <View style="@style/view_line" />

    <RelativeLayout
        android:id="@+id/rl_forget_payment_psw"
        android:background="@color/setting_white"
        style="@style/setting_rl_view">

        <TextView
            style="@style/setting_text_view"
            android:text="忘记支付密码" />

        <ImageView style="@style/setting_image_view" />

    </RelativeLayout>

    <View style="@style/view_line" />

    <RelativeLayout
        android:id="@+id/rl_bank_manage"
        android:background="@color/setting_white"
        style="@style/setting_rl_view">

        <TextView
            style="@style/setting_text_view"
            android:text="我的银行卡" />

        <ImageView style="@style/setting_image_view" />

    </RelativeLayout>

    <View style="@style/view_line" />

    <RelativeLayout
        android:id="@+id/rl_help"
        android:background="@color/setting_white"
        style="@style/setting_rl_view"
        android:visibility="gone">

        <TextView
            style="@style/setting_text_view"
            android:text="帮助" />

        <ImageView style="@style/setting_image_view" />

    </RelativeLayout>

    <View style="@style/view_line" />

</LinearLayout>