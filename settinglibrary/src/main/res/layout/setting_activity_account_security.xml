<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_main_bg_color">

    <include layout="@layout/setting_layout_title_bar" />

    <RelativeLayout
        android:id="@+id/rl_authentication"
        android:background="@color/setting_white"
        style="@style/setting_rl_view"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/setting_text_view"
            android:text="实名认证" />

        <ImageView style="@style/setting_image_view"/>

    </RelativeLayout>

    <View style="@style/view_line" />

    <RelativeLayout
        android:id="@+id/rl_bind_phone"
        android:background="@color/setting_white"
        style="@style/setting_rl_view">

        <TextView
            style="@style/setting_text_view"
            android:text="绑定手机号" />

        <ImageView style="@style/setting_image_view"/>

    </RelativeLayout>

    <View style="@style/view_line" />

    <RelativeLayout
        android:id="@+id/rl_modify_login_psw"
        android:background="@color/setting_white"
        style="@style/setting_rl_view">

        <TextView
            style="@style/setting_text_view"
            android:text="修改登录密码" />

        <ImageView style="@style/setting_image_view"/>

    </RelativeLayout>

    <View style="@style/view_line" />

</LinearLayout>