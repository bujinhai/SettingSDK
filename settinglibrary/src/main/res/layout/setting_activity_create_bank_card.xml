<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/setting_layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持卡人姓名"
            android:textColor="@color/setting_main_text_color"
            android:textSize="@dimen/font_text_size_14" />

        <EditText
            android:id="@+id/et_card_user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColor="@color/setting_minor_text_color"
            android:textSize="@dimen/font_text_size_14" />

    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预留手机号"
            android:textColor="@color/setting_main_text_color"
            android:textSize="@dimen/font_text_size_14" />

        <EditText
            android:id="@+id/et_user_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入预留手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/setting_minor_text_color"
            android:textSize="@dimen/font_text_size_14" />

    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡号"
            android:textColor="@color/setting_main_text_color"
            android:textSize="@dimen/font_text_size_14" />

        <EditText
            android:id="@+id/et_card_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入卡号"
            android:inputType="number"
            android:textColor="@color/setting_minor_text_color"
            android:textSize="@dimen/font_text_size_14" />

    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择银行"
            android:textColor="@color/setting_main_text_color"
            android:textSize="@dimen/font_text_size_14" />

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/setting_minor_text_color"
            android:textSize="@dimen/font_text_size_14"
            tools:text="浦发银行" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/setting_icon_arrow_next" />

    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择省市"
            android:textColor="@color/setting_main_text_color"
            android:textSize="@dimen/font_text_size_14" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/setting_minor_text_color"
            android:textSize="@dimen/font_text_size_14"
            tools:text="北京市" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/setting_icon_arrow_next" />

    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择支行"
            android:textColor="@color/setting_main_text_color"
            android:textSize="@dimen/font_text_size_14" />

        <TextView
            android:id="@+id/tv_bank_branch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/setting_minor_text_color"
            android:textSize="@dimen/font_text_size_14"
            tools:text="上海农商银行" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/setting_icon_arrow_next" />

    </LinearLayout>

    <View style="@style/view_line" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_btn_height"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/setting_bg_btn"
        android:text="提交"
        android:textColor="@color/setting_white"
        android:textSize="@dimen/font_text_size_18" />

</LinearLayout>