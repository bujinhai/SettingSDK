<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/setting_layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码"
            android:textColor="@color/setting_main_text_color"
            android:textSize="@dimen/font_text_size_16" />

        <EditText
            android:id="@+id/et_old_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请填写原密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="10dp"
            android:textCursorDrawable="@drawable/setting_et_cursor"
            android:textSize="@dimen/font_text_size_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="10dp"
        android:background="@color/setting_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@color/setting_main_text_color"
            android:textSize="@dimen/font_text_size_16" />

        <EditText
            android:id="@+id/et_new_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="10dp"
            android:textCursorDrawable="@drawable/setting_et_cursor"
            android:textSize="@dimen/font_text_size_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="10dp"
        android:background="@color/setting_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/setting_main_text_color"
            android:textSize="@dimen/font_text_size_16" />

        <EditText
            android:id="@+id/et_renew_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="10dp"
            android:textCursorDrawable="@drawable/setting_et_cursor"
            android:textSize="@dimen/font_text_size_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="10dp"
        android:background="@color/setting_line_color" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/setting_button_view"
        android:text="确定" />

</LinearLayout>