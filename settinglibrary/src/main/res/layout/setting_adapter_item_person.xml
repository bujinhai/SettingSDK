<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="49dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:minHeight="55dp">

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/setting_def_head"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/item_icon"
                android:gravity="center_vertical"
                android:text="个人资料"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/setting_main_text_color"
                android:textSize="@dimen/font_text_size_16" />

            <ImageView
                android:id="@+id/item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/setting_icon_arrow_next" />

            <TextView
                android:id="@+id/item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/item_arrow"
                android:layout_toEndOf="@+id/item_name"
                android:gravity="center_vertical|end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/textColor_actionsheet_title"
                android:textSize="14sp" />

            <View
                android:id="@+id/item_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:background="@color/line_color" />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>